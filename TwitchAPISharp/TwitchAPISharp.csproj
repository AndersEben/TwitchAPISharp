<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard2.0;net45</TargetFrameworks>
    <NeutralLanguage>en</NeutralLanguage>
    <Description>An API wrapper for using the Twitch APIs</Description>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <RepositoryUrl>https://github.com/AndersEben/TwitchAPISharp</RepositoryUrl>
    <PackageProjectUrl>https://github.com/AndersEben/TwitchAPISharp</PackageProjectUrl>
    <PackageReleaseNotes>First Version
documentation will follow</PackageReleaseNotes>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json" Version="13.0.1" />
  </ItemGroup>

</Project>
